{
  "name": "htmx-chat",
  "version": "1.0.0",
  "description": "HTMX Chat with DaisyUI",
  "scripts": {
    "templ": "templ generate --watch",
    "css": "npx tailwindcss -i ./static/css/input.css -o ./static/css/output.css --watch=always",
    "air": "air",
    "dev": "concurrently \"npm run templ\" \"npm run css\" \"npm run air\""
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "concurrently": "^8.2.2",
    "daisyui": "^5.0.50",
    "tailwindcss": "^4.1.11"
  }
}
