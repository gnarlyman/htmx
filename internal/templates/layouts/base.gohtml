{{define "layouts/base.html"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/htmx/2.0.6/htmx.min.js" integrity="sha512-fzOjdYXF0WrjlPAGWmlpHv2PnJ1m7yP8QdWj1ORoM7Bc4xmKcDRBOXSOZ4Wedia0mjtGzXQX1f1Ah1HDHAWywg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="/static/css/custom.css">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
<header class="bg-white shadow-md p-4">
    <h1 class="text-2xl font-bold text-gray-800">Chat Rooms</h1>
</header>

<main class="flex-grow container mx-auto p-4 flex flex-col md:flex-row gap-4">
    <!-- Left Sidebar: Rooms -->
    <aside class="w-full md:w-1/4 bg-white rounded-lg shadow-md p-4 overflow-y-auto">
        {{template "partials/rooms-sidebar.html" .}}
    </aside>

    <!-- Right Content: Chat -->
    <section id="content" class="w-full md:w-3/4 bg-white rounded-lg shadow-md p-4 flex flex-col">
        {{if .room}}
        {{template "partials/chat-content.html" .}}
        {{else}}
        <div class="flex-grow flex items-center justify-center text-gray-500">
            Select a room to start chatting
        </div>
        {{end}}
    </section>
</main>

<footer class="bg-white shadow-md p-4 text-center text-gray-600">
    HTMX Chat Demo Â© 2025
</footer>
</body>
</html>
{{end}}